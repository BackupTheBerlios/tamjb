<configuration>
  <appSettings>
    <!-- ** Audio settings ** -->

    <add key="Quality" value="LOW" />
    <add key="BufferSize" value="4096" />
    <add key="BufferCount" value="15" />

    <!-- TODO: compression: simple, multiband, none -->
    <add key="Compression" value="simple" />

    <!-- This is a sqlite style connect string. OK? -->
    <add key="ConnectionString" value="URI=file:/home/tekhedd/tamjb.db" />


    <!-- ** Internal tweaks ** -->

    <!-- How many songs to prefetch -->
    <add key="QueueSize" value="20" />

  </appSettings>

  <system.runtime.remoting>
    <application>
      <channels>

      <!-- Note: on a nonsecure network, you probably want to set bindTo
           to locahost -->
      <channel ref="tcp" port="6543" >
        <clientProviders>
          <formatter ref="binary" />
        </clientProviders>
        <serverProviders>
          <formatter ref="binary" typeFilterLevel="Full" />
        </serverProviders>
      </channel>
      </channels>

      <service>
        <wellknown
          mode="SingleCall"
          objectUri="Engine"
          type="byteheaven.tamjb.Engine.Engine,tamjb.Engine"
          />
      </service>

    </application>
  </system.runtime.remoting>
</configuration>
